<Window x:Class="DM_Notes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="DM Notes"
        Height="720" Width="1280"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Icon="/Images/dm_note_icon.png">

    <Window.Resources>
        <Style TargetType="materialDesign:SnackbarMessage" x:Key="CenteredSnackbarMessageStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="materialDesign:SnackbarMessage">

                        <Border Background="{TemplateBinding Background}"
                                Padding="16"
                                CornerRadius="4">

                            <TextBlock Text="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}"
                                       FontSize="18"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Grid.Column="2"
                                       Grid.Row="1"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border Background="#272537">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="585"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Notes"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="36"
                       Margin="10,0,0,0" Height="47" Width="94"/>

            <ListView Grid.Row="1"
                      ItemsSource="{Binding Notes}" 
                      SelectedItem="{Binding SelectedNote, Mode=TwoWay}"
                      Background="#353340"
                      Foreground="White"
                      BorderThickness="0"
                      Height="565"
                      Width="280">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="5">

                            <TextBlock Text="{Binding Title}"
                                             FontSize="16"
                                             FontWeight="Bold"/>

                            <TextBlock Text="{Binding Date, StringFormat=dd.MM.yyyy HH:mm}"
                                             FontSize="12"
                                             Opacity="0.7"/>

                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


            <TextBlock Text="Titel der Notiz"
                       Foreground="White"
                       FontSize="18"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       FontWeight="DemiBold"
                       Margin="10,10,0,0"
                       VerticalAlignment="Top"
                       Height="20"
                       Width="115"/>

            <TextBox Grid.Column="1"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"
                     Background="#FF353340"
                     Foreground="White"
                     FontSize="18"
                     Width="280"
                     Height="30"
                     Margin="10"
                     Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Notiz"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="DemiBold"
                       Grid.Column="1"
                       Grid.Row="1"
                       HorizontalAlignment="Left"
                       Margin="10,4,0,0"
                       VerticalAlignment="Top"
                       Height="25"
                       Width="112" />

            <TextBox Grid.Column="1"
                     Grid.Row="1"
                     HorizontalAlignment="Center"
                     Margin="10"
                     VerticalAlignment="Bottom"
                     Width="940"
                     Background="#FF353340"
                     Foreground="White"
                     FontSize="16"
                     Height="545"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     Text="{Binding UserNote, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <materialDesign:Snackbar Grid.Column="1"
                                     Grid.Row="2"
                                     Width="500"
                                     Height="40"
                                     MessageQueue="{Binding SnackbarMessageQueue}"
                                     VerticalAlignment="Top"
                                     FontSize="18"
                                     Foreground="White">
                <materialDesign:Snackbar.Message>

                    <materialDesign:SnackbarMessage Style="{StaticResource CenteredSnackbarMessageStyle}" />

                </materialDesign:Snackbar.Message>
            </materialDesign:Snackbar>


            <Button Grid.Column="1"
                    Grid.Row="2"
                    Content="Speichern"
                    HorizontalAlignment="Right"
                    Margin="0,0,10,25"
                    VerticalAlignment="Bottom"
                    Height="25"
                    Width="120"
                    Command="{Binding AddNoteCommand}"/>

            <Button Content="Öffnen"
                    HorizontalAlignment="Left"
                    Margin="10,0,0,25"
                    Grid.Row="2"
                    Height="25"
                    Width="120"
                    VerticalAlignment="Bottom"
                    Command="{Binding OpenNoteCommand}"/>

            <Button Content="Löschen"
                    HorizontalAlignment="Right"
                    Margin="0,0,10,25"
                    Grid.Row="2"
                    Height="25"
                    Width="120"
                    VerticalAlignment="Bottom"
                    Command="{Binding RemoveNoteCommand}"/>

            <Button Content="Neu"
                    Margin="0,0,10,10"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    FontSize="20"
                    FontWeight="Bold"
                    Height="50"
                    Width="60"
                    Foreground="White"
                    Command="{Binding NewNoteCommand}">
                <Button.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#FFE49A16"/>
                        <GradientStop Color="#FFCC792B" Offset="1"/>
                    </RadialGradientBrush>
                </Button.Background>
            </Button>

        </Grid>
    </Border>
</Window>
