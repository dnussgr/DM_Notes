<Window x:Class="DM_Notes.MVVM.View.NoteDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DM_Notes.MVVM.View"
        xmlns:ctrl="clr-namespace:DM_Notes.Controls"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="400" Width="600"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Icon="/Images/dm_note_icon.png">

    <Border Background="#272537">


        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Grid.Column="1"
                       Content="Bearbeiten:"
                       Foreground="White"
                       Margin="110,18,10,31"
                       FontWeight="DemiBold"
                       FontSize="18"
                       Grid.RowSpan="2"
                       VerticalAlignment="Center"/>
                
                <ctrl:SliderButton Width="75"
                                   OnLabel="An"
                                   OffLabel="    Aus"
                                   Style="{StaticResource styleSliderButton}"
                                   IsChecked="False"
                                   Checked="EditToggle_Checked"
                                   Unchecked="EditToggle_Unchecked"
                                   Grid.Column="1"
                                   Grid.RowSpan="2"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Top"
                                   Margin="0,24,0,0"/>

                <TextBlock Text="Titel der Notiz"
                           Foreground="White"
                           FontSize="18"
                           HorizontalAlignment="Left"
                           FontWeight="DemiBold"
                           Margin="10,10,0,0"
                           VerticalAlignment="Top"
                           Height="20"
                           Width="115"/>

                <TextBox x:Name="TitleBox"
                         Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Bottom"
                         Background="#FF353340"
                         Foreground="White"
                         FontSize="18"
                         Width="280"
                         Height="30"
                         Margin="10"
                         Grid.Row="1"
                         IsReadOnly="True"/>
            </Grid>

            <TextBlock Text="Titel der Notiz"
                       Foreground="White"
                       FontSize="18"
                       HorizontalAlignment="Left"
                       FontWeight="DemiBold"
                       Margin="10,10,0,0"
                       VerticalAlignment="Top"
                       Height="20"
                       Width="115"/>

            <TextBox x:Name="NoteBox" 
                     Text="{Binding UserNote, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"
                     Background="#FF353340"
                     Foreground="White"
                     FontSize="18"
                     Width="580"
                     Height="255"
                     Margin="10"
                     IsReadOnly="True"/>
        </StackPanel>
    </Border>

</Window>
